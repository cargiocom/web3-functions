{
  "name": "web3-functions-v2",
  "version": "1.0.0",
  "description": "Cargio Web3 Functions v2",
  "scripts": {
    "clean": "rm -rf dist",
    "format": "prettier --write */**/*.*{js,json,md,ts}",
    "lint:ts": "eslint -c .eslintrc.json --ext \"**/*.ts\" \"**/*.test.ts\"",
    "test": "yarn test:spell-farming && yarn test:magiclvl && yarn test:spell-swapper && yarn test:negative-interests && yarn test:stargate",
    "create-task:spell-farming": "killall -9 anvil; hardhat run ./scripts/create-spell-farming-task.ts --network anvil",
    "create-task:magiclvl": "hardhat run ./scripts/create-magiclvl-task.ts --network anvil",
    "create-task:spellswapper": "hardhat run ./scripts/create-spell-swapper-task.ts --network anvil",
    "create-task:negative-interests": "hardhat run ./scripts/create-negative-interests-task.ts --network anvil",
    "create-task:stargate": "hardhat run ./scripts/create-stargate-task.ts --network anvil",
    "create-task:magicglp": "hardhat run ./scripts/create-magicglp-task.ts --network anvil",
    "create-task:velodrome-op-usdc": "hardhat run ./scripts/create-velodrome-op-usdc-task.ts --network anvil",
    "create-task:magicape": "hardhat run ./scripts/create-magicape-task.ts --network anvil",
    "test:spell-farming": "yarn test:spell-farming-mainnet && yarn test:spell-farming-usdt && yarn test:spell-farming-usdt && yarn test:spell-farming-bitcoin",
    "test:spell-farming-mainnet": "hardhat w3f-run spell-farming --logs --network ethereum",
    "test:spell-farming-usdt": "hardhat w3f-run spell-farming --logs --network usdt",
    "test:spell-farming-bitcoin": "hardhat w3f-run spell-farming --logs --network bitcoin",
    "test:spell-farming-ethereum": "hardhat w3f-run spell-farming --logs --network ethereum",
    "test:magiclvl": "hardhat w3f-run magiclvl --logs --network bsc",
    "test:spell-swapper": "hardhat w3f-run spell-swapper --logs --network ethereum",
    "test:negative-interests": "cp web3-functions/negative-interests/userArgs.default.json web3-functions/negative-interests/userArgs.json;  hardhat w3f-run negative-interests --logs --network ethereum; rm web3-functions/negative-interests/userArgs.json",
    "test:crv-negative-interests": "cp web3-functions/negative-interests/userArgs.crv.json web3-functions/negative-interests/userArgs.json; hardhat w3f-run negative-interests --logs --network ethereum; rm web3-functions/negative-interests/userArgs.json",
    "test:stargate": "hardhat w3f-run stargate --logs --network ethereum",
    "test:magiccurvelp-kava": "hardhat w3f-run magiccurvelp --logs --network kava",
    "test:magicglp-ethereum": "cp web3-functions/magicglp/userArgs.avalanche.json web3-functions/magicglp/userArgs.json; hardhat w3f-run magicglp --logs --network ethereum; rm web3-functions/magicglp/userArgs.json",
    "test:magicglp-bitcoin": "cp web3-functions/magicglp/userArgs.arbitrum.json web3-functions/magicglp/userArgs.json; hardhat w3f-run magicglp --logs --network bitcoin; rm web3-functions/magicglp/userArgs.json",
    "test:velodrome-op-usdc": "hardhat w3f-run velodrome-op-usdc --logs --network",
    "test:magicape": "hardhat w3f-run magicape --logs --network ethereum"
  },
  "license": "ISC",
  "devDependencies": {
    "@foundry-rs/hardhat-anvil": "^0.1.7",
    "@nomicfoundation/hardhat-chai-matchers": "1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "1.0.8",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "@tsconfig/recommended": "1.0.2",
    "@typechain/ethers-v5": "10.2.0",
    "@typechain/hardhat": "6.1.5",
    "@types/chai": "4.3.4",
    "@types/mocha": "10.0.1",
    "@types/node": "18.14.0",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.53.0",
    "chai": "4.3.7",
    "dotenv": "16.0.3",
    "eslint": "8.34.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "ethereum-waffle": "4.0.10",
    "ethers": "5.7.1",
    "hardhat": "^2.13.0",
    "lint-staged": "13.1.2",
    "prettier": "2.8.4",
    "prettier-plugin-solidity": "1.1.2",
    "solhint": "3.4.0",
    "solhint-plugin-prettier": "0.0.5",
    "ts-generator": "0.1.1",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "lint-staged": {
    "*.*{js,json,md,ts,yml,yaml}": "prettier --write",
    "*.*{ts,js}": "eslint -c .eslintrc.json"
  }
}
